
{
  "compilerOptions": {
    "skipLibCheck": true,
    "sourceMap": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "jsxFactory": "h",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts"
  ]
}
